# Processing Configuration
PROCESSING_TIMEOUT_MS=15000
MAX_RETRIES=3

# Upload Configuration
MAX_UPLOAD_SIZE_MB=10
PRESIGNED_URL_EXPIRY_MINUTES=15

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000