{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:load": "node load-tests/run-tests.js",
    "test:load:basic": "npx artillery run load-tests/artillery-config.yml",
    "test:load:scaling": "npx artillery run load-tests/scaling-test.yml",
    "test:integration": "vitest tests/integration",
    "test:load:new": "artillery run load-tests/load-test.yml",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts --fix",
    "clean": "rm -rf dist node_modules .turbo",
    "seed:themes": "tsx src/scripts/seedThemes.ts",
    "upload:assets": "tsx src/scripts/uploadThemeAssets.ts",
    "setup:cors": "tsx src/scripts/configureCors.ts",
    "setup:themes": "npm run setup:cors && npm run upload:assets && npm run seed:themes",
    "worker:start": "tsx src/workers/index.ts",
    "jobs:retry": "tsx -e \"import { JobRetryService } from './src/services/jobRetryService.js'; new JobRetryService().retryFailedJobs()\"",
    "jobs:cleanup": "tsx -e \"import { JobCleanupService } from './src/services/jobCleanupService.js'; new JobCleanupService().cleanupOldJobs()\"",
    "test:all": "npm run test && npm run test:integration"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.716.0",
    "@aws-sdk/client-dynamodb": "^3.716.0",
    "@aws-sdk/client-rekognition": "^3.716.0",
    "@aws-sdk/client-s3": "^3.716.0",
    "@aws-sdk/client-secrets-manager": "^3.716.0",
    "@aws-sdk/lib-dynamodb": "^3.716.0",
    "@aws-sdk/s3-request-presigner": "^3.716.0",
    "aws-xray-sdk-core": "^3.9.0",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.0",
    "helmet": "^8.1.0",
    "jimp": "^1.6.0",
    "node-cron": "^3.0.3",
    "shared": "file:../shared",
    "sharp": "^0.34.4",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/node": "^22.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "artillery": "^2.0.26",
    "eslint": "^9.36.0",
    "supertest": "^7.1.3",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}
